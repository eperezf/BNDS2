extends ../../includes/layout

block content
  .container
    .row
      .col.text-center
        a.btn.btn-outline-primary(href='/admin' role='button') Volver
      .col.text-center
        a.btn.btn-outline-success(href='/admin/operators/add' role='button') Agregar
    .row.mt-3
      .col
        table.table
          thead
            tr
              th(scope='col') ID
              th(scope='col') Nombre
              th(scope='col') Menu
          tbody
            each operator in operators
              tr
                th(scope='row') #{operator.id}
                td #{operator.name}
                td 
                  a.btn.btn-outline-primary.mx-1(href='/admin/operators/edit?id='+operator.id role='button') Editar
                  a.btn.btn-outline-danger.mx-1(href='/admin/operators/delete?id='+operator.id role='button') Eliminar
