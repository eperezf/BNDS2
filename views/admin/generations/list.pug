extends ../../includes/layout

block content
  .container
    .row
      .col.text-center
        a.btn.btn-outline-primary(href='/admin' role='button') Volver
      .col.text-center
        a.btn.btn-outline-success(href='/admin/generations/add' role='button') Agregar
    .row.mt-3
      .col
        table.table
          thead
            tr
              th(scope='col') ID
              th(scope='col') Nombre
              th(scope='col') Menu
          tbody
            each generation in generations
              tr
                th(scope='row') #{generation.id}
                td #{generation.name}
                td 
                  a.btn.btn-outline-primary.mx-1(href='/admin/generations/edit/'+generation.id role='button') Editar
                  a.btn.btn-outline-danger.mx-1(href='/admin/generations/delete/'+generation.id role='button') Eliminar
