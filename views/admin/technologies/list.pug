extends ../../includes/layout

block content
  .container
    .row
      .col.text-center
        a.btn.btn-outline-primary(href='/admin' role='button') Volver
      .col.text-center
        a.btn.btn-outline-success(href='/admin/operators/add' role='button') Agregar
    .row.mt-3
      .col
        table.table
          thead
            tr
              th(scope='col') ID
              th(scope='col') Nombre
              th(scope='col') Menu
          tbody
            each technology in technologies
              tr
                th(scope='row') #{technology.id}
                td #{technology.name}
                td 
                  a.btn.btn-outline-primary.mx-1(href='/admin/technologies/edit/'+technology.id role='button') Editar
                  a.btn.btn-outline-danger.mx-1(href='/admin/technologies/delete/'+technology.id role='button') Eliminar
