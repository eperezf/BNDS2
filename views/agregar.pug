extends includes/layout

block content
  
  .container
    .row.mt-4
      .col
        .h2
          i.fas.fa-mobile.me-2
          | Teléfono: 
          #fullName.d-inline
    form#addPhoneForm(method='POST' enctype='application/x-www-form-urlencoded' action='/agregar')
      .row.justify-content-md-center.mt-4
        .col-md-4
          label.form-label(for='brand') Marca
          input.form-control#brand(type='text' placeholder='Samsung' aria-label='Marca' name='brand' required)
        .col-md-4
          label.form-label(for='model') Modelo
          input.form-control#model(type='text' placeholder='Galaxy S20 Plus' aria-label='Modelo' name='model' required)
        .col-md-4
          label.form-label(for='variant') Variante
          input.form-control#variant(type='text' placeholder='SM-321' aria-label='Variante' name='variant' required)
      .row.justify-content-md-center.mt-4
        hr
        .col-md-12
          h2 
            i.fas.fa-signal.me-2
            | Frecuencias:
          .row
            each generation in generations
              .col-md-3.col-sm-4.col-xs-12
                .card
                  .card-header 
                    h5 #{generation.name}
                  .card-body
                    each frequency in generation.frequencies
                      .card.mb-3.bg-light
                        .card-header #{frequency.name}
                        .card-body
                          .form-check
                            input.form-check-input(type='radio' name='frequency['+frequency.id+']' value='true' id='freqTrue['+frequency.id+']' required)
                            label.form-check-label(for='frequency['+frequency.id+']')
                              i.fas.fa-check.me-1
                              | Sí
                          .form-check
                            input.form-check-input(type='radio' name='frequency['+frequency.id+']' value='false' id='freqFalse['+frequency.id+']' required)
                            label.form-check-label(for='frequency['+frequency.id+']')
                              i.fas.fa-times.me-2
                              | No
                          .form-check
                            input.form-check-input(type='radio' name='frequency['+frequency.id+']' value='unknown' id='freqUnknown['+frequency.id+']' required)
                            label.form-check-label(for='frequency['+frequency.id+']')
                              i.fas.fa-question.me-2
                              | No sé
        
      .row.justify-content-md-center.mt-4
        hr
        .col-md-12
          h2
            i.fas.fa-cogs.me-2
            | Tecnologías:
          .row
            each technology in technologies
              .col-md-3.col-sm-4.col-xs-12
                .card.mb-3.bg-light
                  .card-header
                    h5 #{technology.name}
                  .card-body
                    .form-check
                      input.form-check-input(type='radio' name='technology['+technology.id+']' value='true' id='techTrue['+technology.id+']' required)
                      label.form-check-label(for='technology['+technology.id+']')
                        i.fas.fa-check.me-1
                        | Sí
                    .form-check
                      input.form-check-input(type='radio' name='technology['+technology.id+']' value='false' id='techFalse['+technology.id+']' required)
                      label.form-check-label(for='technology['+technology.id+']')
                        i.fas.fa-times.me-2
                        | No
                    .form-check
                      input.form-check-input(type='radio' name='technology['+technology.id+']' value='unknown' id='techUnknown['+technology.id+']' required)
                      label.form-check-label(for='technology['+technology.id+']')
                        i.fas.fa-question.me-2
                        | No sé
      .row.justify-content-md-center.mt-4.mb-4
        .g-recaptcha(data-sitekey=sitekey data-callback='onCompleted' data-size='invisible')
        .col.text-center
          button.btn.btn-primary(type='submit') Agregar
          
  script(src='https://www.google.com/recaptcha/api.js?render='+sitekey)
  script(src='/javascripts/addphone.js')
