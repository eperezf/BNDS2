extends includes/layout

block content
  h1.offset-md-1= title
  p.offset-md-1 Welcome to #{title}
  form
  .row
    .col-md-4.offset-md-1
      label Busca tu telefono (marca, modelo y variantes)
      input.form-control(type='text', placeholder='telefono')
    .col-md-4.offset-md-1
      label Selecciona tu operadora
      select.form-control
        each operator in operators
          option(value=operator.id) #{operator.name}
  .row 
    button.btn.btn-primary.col-md-1.offset-md-5(type='submit') Verificar